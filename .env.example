# ============================
# Configurações da Aplicação
# ============================
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

# Porta externa que o Nginx vai expor
APP_PORT=8080

# ============================
# Banco de Dados (MySQL no Docker)
# ============================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

# Variáveis usadas pelo container MySQL (não pelo Laravel)
DB_CONNECTION_MYSQL=mysql

MYSQL_DATABASE=laravel
MYSQL_USER=laravel
MYSQL_PASSWORD=secret
MYSQL_ROOT_PASSWORD=root
MYSQL_PORT=3306

# Variáveis para testar sem a conexão com o banco de dados
LITE_CONNECTION=sqlite
LITE_DATABASE=:memory:

# ============================
# Cache, Sessão e Queue
# ============================
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# ============================
# Configurações de Logs
# ============================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ============================
# Configurações de Mail
# ============================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME=

# ============================
# Serviços Externos (opcional)
# ============================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
